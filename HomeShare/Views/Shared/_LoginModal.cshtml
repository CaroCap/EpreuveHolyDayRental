@model HoliDayRental.Models.HomeIndex
<!-- Modal -->
<div id="loginpop" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-sm-6 login">
                    <h4>Login</h4>
                    <form class="" role="form" asp-action="Register">
                        <div class="form-group">
                            <label asp-for="@Model.Connection.Login" class="sr-only">E-mail</label>
                            <input asp-for="@Model.Connection.Login" type="email" class="form-control" placeholder="jhonSuper">
                            <span asp-validation-for="@Model.Connection.Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Connection.Password" class="sr-only" for="exampleInputPassword2">Mot de passe</label>
                            <input asp-for="@Model.Connection.Password" type="password" class="form-control" id="exampleInputPassword2" placeholder="Mot de passe">
                            <span asp-validation-for="@Model.Connection.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </form>
                </div>
                <div class="col-sm-6">
                    <h4>Nouvel utilisateur?</h4>
                    <p>Rejoignez nous maintenant et profitez des propriétés de nos membres.</p>
                    <input type="button" class="btn btn-info">@Html.ActionLink("s'enregistrer", "Create", "Membre")/>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /.modal -->